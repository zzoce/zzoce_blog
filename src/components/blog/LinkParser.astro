---
import { parse } from 'some-markdown-parser'; // 你可以选择一个适合的 Markdown 解析库
const content = Astro.props.content;
---

{parse(content).map((node) => {
  if (node.type === 'link' && node.url.startsWith('[[') && node.url.endsWith(']]')) {
    const linkText = node.url.slice(2, -2);
    return <a href={`/${linkText}`}>{linkText}</a>;
  }
  return <p>{node.content}</p>;
})}
